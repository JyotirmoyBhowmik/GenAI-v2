# ============================================================
# GenAI Platform - Environment Configuration Template
# ============================================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# ============================================================
# Application Settings
# ============================================================
APP_NAME=GenAI Platform
APP_ENV=development
LOG_LEVEL=INFO
DEBUG=True

# ============================================================
# Security & Encryption
# ============================================================
SECRET_KEY=your-secret-key-here-change-in-production
ENCRYPTION_KEY=your-encryption-key-here-base64-encoded
JWT_SECRET=your-jwt-secret-here
SESSION_TIMEOUT=3600

# ============================================================
# Cloud AI Model API Keys
# ============================================================
# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_ORG_ID=org-your-org-id

# Google Gemini
GOOGLE_API_KEY=your-google-gemini-api-key
GOOGLE_PROJECT_ID=your-google-project-id

# Anthropic Claude
ANTHROPIC_API_KEY=your-anthropic-api-key

# Grok (xAI)
GROK_API_KEY=your-grok-api-key
GROK_API_BASE=https://api.x.ai/v1

# ============================================================
# Local Model Settings (Ollama)
# ============================================================
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL_LLAMA=llama3:latest
OLLAMA_MODEL_MISTRAL=mistral:latest
OLLAMA_MODEL_MIXTRAL=mixtral:latest

# ============================================================
# Vector Database Settings
# ============================================================
# Chroma (default - embedded)
CHROMA_PERSIST_DIR=./data/chroma_db
CHROMA_HOST=localhost
CHROMA_PORT=8000

# Pinecone (optional)
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=your-pinecone-environment
PINECONE_INDEX_NAME=genai-platform

# Weaviate (optional)
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=your-weaviate-api-key

# ============================================================
# Knowledge Graph Settings
# ============================================================
# NetworkX (default - embedded, no config needed)

# Neo4j (optional)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-neo4j-password
NEO4J_DATABASE=genai_platform

# ============================================================
# SQL Warehouse Settings
# ============================================================
# SQLite (default - embedded)
SQLITE_DB_PATH=./data/warehouse.db

# PostgreSQL (optional)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=genai_platform
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-postgres-password

# Hive (optional)
HIVE_HOST=localhost
HIVE_PORT=10000
HIVE_DATABASE=genai_platform
HIVE_AUTH=NONE

# ============================================================
# ERP Connectors
# ============================================================
# SAP
SAP_BASE_URL=https://your-sap-instance.com
SAP_CLIENT_ID=your-sap-client-id
SAP_CLIENT_SECRET=your-sap-client-secret
SAP_USERNAME=your-sap-username
SAP_PASSWORD=your-sap-password

# Oracle ERP
ORACLE_ERP_BASE_URL=https://your-oracle-instance.com
ORACLE_ERP_CLIENT_ID=your-oracle-client-id
ORACLE_ERP_CLIENT_SECRET=your-oracle-client-secret

# Tally
TALLY_HOST=localhost
TALLY_PORT=9000
TALLY_COMPANY=your-company-name

# Zoho Books
ZOHO_BOOKS_CLIENT_ID=your-zoho-books-client-id
ZOHO_BOOKS_CLIENT_SECRET=your-zoho-books-client-secret
ZOHO_BOOKS_REFRESH_TOKEN=your-zoho-books-refresh-token
ZOHO_BOOKS_ORG_ID=your-zoho-books-org-id

# ============================================================
# CRM Connectors
# ============================================================
# Salesforce
SALESFORCE_USERNAME=your-salesforce-username
SALESFORCE_PASSWORD=your-salesforce-password
SALESFORCE_SECURITY_TOKEN=your-salesforce-security-token
SALESFORCE_DOMAIN=login  # or 'test' for sandbox

# Zoho CRM
ZOHO_CRM_CLIENT_ID=your-zoho-crm-client-id
ZOHO_CRM_CLIENT_SECRET=your-zoho-crm-client-secret
ZOHO_CRM_REFRESH_TOKEN=your-zoho-crm-refresh-token

# Freshdesk
FRESHDESK_DOMAIN=your-domain.freshdesk.com
FRESHDESK_API_KEY=your-freshdesk-api-key

# ============================================================
# HRMS Connectors
# ============================================================
# DarwinBox
DARWINBOX_BASE_URL=https://your-instance.darwinbox.io
DARWINBOX_API_KEY=your-darwinbox-api-key
DARWINBOX_API_SECRET=your-darwinbox-api-secret

# Keka
KEKA_BASE_URL=https://your-domain.keka.com
KEKA_API_KEY=your-keka-api-key

# BambooHR
BAMBOOHR_DOMAIN=your-domain
BAMBOOHR_API_KEY=your-bamboohr-api-key

# ============================================================
# DMS Connectors (SharePoint, OneDrive, Google Drive)
# ============================================================
# Microsoft (SharePoint & OneDrive)
MICROSOFT_TENANT_ID=your-tenant-id
MICROSOFT_CLIENT_ID=your-client-id
MICROSOFT_CLIENT_SECRET=your-client-secret
MICROSOFT_REDIRECT_URI=http://localhost:8000/auth/callback
SHAREPOINT_SITE_URL=https://your-tenant.sharepoint.com/sites/your-site

# Google Drive
GOOGLE_DRIVE_CREDENTIALS_FILE=./config/google_drive_credentials.json
GOOGLE_DRIVE_TOKEN_FILE=./config/google_drive_token.json

# ============================================================
# Email Connectors
# ============================================================
# Outlook 365 (uses Microsoft auth above)
OUTLOOK_EMAIL=your-outlook-email@company.com

# Gmail
GMAIL_CREDENTIALS_FILE=./config/gmail_credentials.json
GMAIL_TOKEN_FILE=./config/gmail_token.json
GMAIL_EMAIL=your-gmail@company.com

# ============================================================
# Division Settings
# ============================================================
DEFAULT_DIVISION=FMCG
DIVISIONS=FMCG,Manufacturing,Hotel,Stationery,Retail,Corporate

# ============================================================
# Data Retention & Compliance
# ============================================================
DATA_RETENTION_DAYS=365
AUDIT_LOG_RETENTION_DAYS=730
PII_REDACTION_ENABLED=True
ENCRYPTION_AT_REST=True

# ============================================================
# Billing & Cost Tracking
# ============================================================
BILLING_CURRENCY=USD
COST_TRACKING_ENABLED=True
GENERATE_MONTHLY_INVOICES=True

# ============================================================
# Backup Settings
# ============================================================
BACKUP_ENABLED=True
BACKUP_DIRECTORY=./backups
BACKUP_SCHEDULE=daily
BACKUP_RETENTION_DAYS=30

# ============================================================
# Plugin System
# ============================================================
PLUGINS_DIRECTORY=./backend/plugins/custom
PLUGINS_ENABLED=True

# ============================================================
# Tesseract OCR
# ============================================================
# Windows: C:\Program Files\Tesseract-OCR\tesseract.exe
# Mac: /usr/local/bin/tesseract
# Linux: /usr/bin/tesseract
TESSERACT_CMD=C:\Program Files\Tesseract-OCR\tesseract.exe
